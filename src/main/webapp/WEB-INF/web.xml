<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
	      http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5">
    <servlet>
        <servlet-name>home</servlet-name>
        <servlet-class>com.hotel.mariam.controller.MainServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>home</servlet-name>
        <url-pattern>/mariam</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>booking</servlet-name>
        <servlet-class>com.hotel.mariam.controller.Booking</servlet-class>
    </servlet>
        <servlet-mapping>
            <servlet-name>booking</servlet-name>
            <url-pattern>/book</url-pattern>
        </servlet-mapping>

    <servlet>
        <servlet-name>signup</servlet-name>
        <servlet-class>com.hotel.mariam.controller.SignUp</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>signup</servlet-name>
        <url-pattern>/signup</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>com.hotel.mariam.controller.Login</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>com.hotel.mariam.controller.Logout</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>cabinet</servlet-name>
        <servlet-class>com.hotel.mariam.controller.Cabinet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>cabinet</servlet-name>
        <url-pattern>/cabinet</url-pattern>
    </servlet-mapping>
</web-app>
