<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
	      http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5">
    <welcome-file-list>
        <welcome-file>home</welcome-file>
    </welcome-file-list>

    <error-page>
        <exception-type>java.lang.Exception</exception-type>
        <location>/jsps/error.jsp</location>
    </error-page>

    <filter>
        <filter-name>commonFilter</filter-name>
        <filter-class>com.hotel.mariam.controller.CommonFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>commonFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>localizationFilter</filter-name>
        <filter-class>com.hotel.mariam.controller.LocalizationFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>localizationFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>error</filter-name>
        <filter-class>com.hotel.mariam.controller.ExceptionFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>error</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    
    <servlet>
        <servlet-name>home</servlet-name>
        <servlet-class>com.hotel.mariam.controller.MainServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>home</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>queries</servlet-name>
        <servlet-class>com.hotel.mariam.controller.QueriesManager</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>queries</servlet-name>
        <url-pattern>/queriesPage</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>booking</servlet-name>
        <servlet-class>com.hotel.mariam.controller.Booking</servlet-class>
    </servlet>
        <servlet-mapping>
            <servlet-name>booking</servlet-name>
            <url-pattern>/book</url-pattern>
        </servlet-mapping>

    <servlet>
        <servlet-name>signup</servlet-name>
        <servlet-class>com.hotel.mariam.controller.SignUp</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>signup</servlet-name>
        <url-pattern>/signup</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>com.hotel.mariam.controller.Login</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>com.hotel.mariam.controller.Logout</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>cabinet</servlet-name>
        <servlet-class>com.hotel.mariam.controller.Cabinet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>cabinet</servlet-name>
        <url-pattern>/cabinet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>prices</servlet-name>
        <servlet-class>com.hotel.mariam.controller.Prices</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>prices</servlet-name>
        <url-pattern>/prices</url-pattern>
    </servlet-mapping>
</web-app>
